<Window x:Class="AsciiAskMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AsciiAskMe" Height="160" Width="338">
    <Grid Margin="0,0,2,0">
        <TextBox x:Name="editASCIICode" HorizontalAlignment="Left" Height="23" Margin="10,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="editASCIICode_PreviewTextInput"/>
        <TextBox x:Name="editASCIIOutput" HorizontalAlignment="Left" Height="23" Margin="191,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Button x:Name="btnAskMe" Content="Ask Me" HorizontalAlignment="Left" Margin="119,88,0,0" Width="75" Click="btnAskMe_Click" Height="22" VerticalAlignment="Top"/>
        <Label Content="ASCII Code" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="ASCII Output" HorizontalAlignment="Left" Margin="191,20,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
